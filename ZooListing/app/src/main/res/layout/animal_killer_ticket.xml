<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:padding="5pt">
    <LinearLayout
            android:background="@drawable/background_killer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="50pt"
                android:layout_height="50pt"
                app:srcCompat="@drawable/baboon"
                android:id="@+id/ivAnimalImage"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Baboon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvName" android:textSize="24sp"/>
            <TextView
                    android:text="it is an animal, maybe not, or even a cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvDes"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>